<LoginWindow>
    glayout: glayout
    Title:
        text: "Login"
    GridLayout:
        id: glayout
        size_hint: .8, .8
        pos_hint: {'center_x':.5, 'center_y':.5}
        canvas:
            Color:
                rgba: .3, .3, .3, 1
            Rectangle:
                size: self.size
                pos: self.pos